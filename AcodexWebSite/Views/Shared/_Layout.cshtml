<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Scripts/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link id="themeStylesheet" rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary data-bs-theme=" dark">
        <div class="container-fluid">
            <a class="navbar-brand"  href="@Url.Action("Index", "Home")">
                <div>
                    <img src="~/Scripts/src/Kırmızı_Logo_Transparan.png" alt="Logo" style="height: 50px; margin: 5px;">
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "RoadMaps")"> Yol Haritaları</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Documention", "Home")"> Dokümantasyon</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Source", "Home")"> Kaynaklar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Shop", "Home")"> Mağaza</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="@Url.Action("Film", "Home")"> Belgesel/Film</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Diğerleri
                        </a>
                        <ul class="dropdown-menu ">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Project")"> Projeler</a>
                            </li>
                            <li><a class="dropdown-item" href="@Url.Action("SocialAccount", "Home")"> Sosyal Medya</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("About", "Home")"> Hakkımda</a></li>
                        </ul>
                    </li>
                </ul>

                <form class="d-flex ms-auto" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer-->
    <div class="footer text-center bg-dark text-light m2 p-2">
        <br>
        <p>
            <b>Acodex Academy </b><br>
            <em>Abdulvahap DOĞAN</em>
        </p>
    </div>

    <!-- Yol haritaları kısmındaki tab seçimi-->
    <script>
        window.addEventListener('load', function () {
            // İlk tab'ı aktif yap
            var tab = new bootstrap.Tab(document.querySelector('#content1'));
            tab.show(); // Sayfa yüklendiğinde content1 tab'ı aktif olur

            // Tab'a tıklanıldığında sadece aktif sekme gösterilsin
            var dropdownLinks = document.querySelectorAll('.dropdown-item');
            dropdownLinks.forEach(function (link) {
                link.addEventListener('click', function () {
                    var activeTab = document.querySelector('.tab-pane.show.active');
                    if (activeTab) {
                        activeTab.classList.remove('show', 'active');
                    }
                });
            });
        });
    </script>
    <script src="~/Scripts/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>

</body>

</html>