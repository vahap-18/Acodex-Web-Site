@using AcodexWebSite.Models
@model List<TblShop>

@foreach (var item in Model)
{
    <div class="subBook col">
        <a href="@item.Link" style="text-decoration: none; color: inherit;">
            <div class="card mb-3 btn btn-outline-dark" type="button" style="min-width: 20rem;">
                <div class="row g-0">
                    <!-- Sol tarafta kitap kapağı -->
                    <div class="col-md-4">
                        <img src="@Url.Content(item.Image)" class="img-fluid rounded-start" alt="Kapak görseli" style="object-fit: cover; width: 100%; height: 100%;">
                    </div>

                    <!-- Sağ tarafta kitap bilgileri -->
                    <div class="col-md-8">
                        <div class="card-body text-start">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Price ₺ <br>@item.PageNumber sayfa</p>
                            <div class="d-flex align-items-center">
                                <img src="~/Scripts/src/Vahap.jpg" class="img-fluid" style="height: 45px; border-radius: 50px;" alt="Yazar">
                                <p class="card-text ms-2"><small>@item.Author</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

}